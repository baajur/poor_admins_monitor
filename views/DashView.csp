<!DOCTYPE html>
<html class="no-js" lang="en">
<%c++
auto dvs=@@.get<std::unordered_map<int,std::string>>("devices");
%>
<head>
    <%view head %>
</head>
<body>
<div id="layout">
    <a href="#menu" id="menuLink" class="menu-link">
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu">
            <span class="pure-menu-heading">Devices</span>

            <ul class="pure-menu-list">
                <%c++ for(auto iter:dvs){%>
                <li class="pure-menu-item"><a href="#" class="pure-menu-link" data-device-id="{%iter.first%}">{%iter.second%}</a>
                </li>
                <%c++}%>
            </ul>
        </div>
    </div>

    <div id="main">
        <div class="header">
            <div class="pure-menu pure-menu-horizontal">
                <a href="/" class="pure-menu-heading pure-menu-link">PAM - Graphs</a>
            </div>
        </div>
        <div class="content">
            <canvas id="chart"></canvas>
        </div>
    </div>
</div>

<script src="/static/js/Chart.bundle.min.js"></script>
<script defer src="/static/js/app.min.js"></script>
</body>
</html>
